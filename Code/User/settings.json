{
    "telemetry.telemetryLevel": "off",
    "explorer.confirmDragAndDrop": false,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "vscode-md.options.mode": "wysiwyg",
    "workbench.iconTheme": "vscode-icons",
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "python.languageServer": "Default",
    "editor.inlineSuggest.enabled": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": false,
        "scminput": false,
        "yaml": false,
        "haskell": true,
        "latex": true
    },
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.intellisense.citation.backend": "biblatex",
    "git.suggestSmartCommit": false,
    "git.confirmSync": false,
    "haskell.manageHLS": "GHCup",
    "latex-workshop.latex.recipe.default": "lastUsed",
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "pdflatex with glossaries",
            "tools": [
                "pdflatex",
                "makeglossaries",
                "pdflatex"
            ]
        },
        {
            "name": "latexmk (latexmkrc)",
            "tools": [
                "latexmk_rconly"
            ]
        },
        {
            "name": "latexmk (lualatex)",
            "tools": [
                "lualatexmk"
            ]
        },
        {
            "name": "latexmk (xelatex)",
            "tools": [
                "xelatexmk"
            ]
        },
        {
            "name": "pdflatex -> bibtex -> pdflatex * 2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "Compile Rnw files",
            "tools": [
                "rnw2tex",
                "latexmk"
            ]
        },
        {
            "name": "Compile Jnw files",
            "tools": [
                "jnw2tex",
                "latexmk"
            ]
        },
        {
            "name": "Compile Pnw files",
            "tools": [
                "pnw2tex",
                "latexmk"
            ]
        },
        {
            "name": "tectonic",
            "tools": [
                "tectonic"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-shell-escape", // for minted
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-shell-escape", // for minted
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "makeglossaries",
            "command": "makeglossaries",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "pdflatexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "latexmk_rconly",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "-r",
                "%DOCFILE%.latexmkrc",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "lualatexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-lualatex",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "xelatexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-xelatex",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "rnw2tex",
            "command": "Rscript",
            "args": [
                "-e",
                "library(knitr); knit('%DOCFILE_EXT%')"
            ],
            "env": {}
        },
        {
            "name": "jnw2tex",
            "command": "julia",
            "args": [
                "-e",
                "using Weave; weave(\"%DOCFILE_EXT%\", doctype=\"tex\")"
            ],
            "env": {}
        },
        {
            "name": "pnw2tex",
            "command": "julia",
            "args": [
                "-e",
                "using Pweave; Pweave.pweave(\"%DOCFILE_EXT%\",doctype=\"tex\")"
            ],
            "env": {}
        },
        {
            "name": "tectonic",
            "command": "tectonic",
            "args": [
                "%DOC%"
            ],
            "env": {}
        }
    ],
    "workbench.colorCustomizations": {
        "activityBar.background": "#1c2128",
        "titleBar.activeBackground": "#22272e",
        "titleBar.activeForeground": "#adbac7",
        "statusBar.background": "#1c2128",
        "statusBar.foreground": "#adbac7",
        "editor.background": "#22272e",
        "editor.foreground": "#adbac7",
        "editorCursor.foreground": "#00af87",
        "editor.lineHighlightBackground": "#3f4142",
        "editorLineNumber.foreground": "#adbac7",
        "editorWhitespace.foreground": "#2d333b",
        "editor.selectionBackground": "#3f4142",
        "sideBar.background": "#1c2128",
        "sideBar.foreground": "#adbac7",
        "sideBarSectionHeader.background": "#1c2128",
        "activityBar.foreground": "#00af87",
        "terminal.ansiBlack": "#1c2128",
        "terminal.ansiRed": "#d7005f",
        "terminal.ansiGreen": "#00af87",
        "terminal.ansiYellow": "#f0b746",
        "terminal.ansiBlue": "#5f87ff",
        "terminal.ansiMagenta": "#ff8700",
        "terminal.ansiCyan": "#00afff",
        "terminal.ansiWhite": "#adbac7",
        "terminal.ansiBrightBlack": "#2d333b",
        "terminal.ansiBrightRed": "#d7005f",
        "terminal.ansiBrightGreen": "#00af87",
        "terminal.ansiBrightYellow": "#f0b746",
        "terminal.ansiBrightBlue": "#5f87ff",
        "terminal.ansiBrightMagenta": "#ff8700",
        "terminal.ansiBrightCyan": "#00afff",
        "terminal.ansiBrightWhite": "#dcdcdc",
        "terminal.background": "#22272e",
        "terminal.foreground": "#adbac7"
    },
    // dealing with fonts
    "editor.fontFamily": "'CustomJetBrainsMonoNFFantasqueSansMNF', 'JetBrainsMono Nerd Font', 'FiraCode Nerd Font Mono', monospace",
    "editor.fontLigatures": true,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment",
                "settings": {
                    "fontStyle": "italic"
                }
            }
        ]
    },
    "python.testing.pytestEnabled": true, 
    // terminal
    // https://unix.stackexchange.com/questions/103608/is-there-any-reason-why-i-get-a-when-i-press-up-arrow-at-the-console-login-sc
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.shellIntegration.decorationsEnabled": "both",
    "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font', monospace",
    "terminal.integrated.defaultProfile.linux": "0nyr-bash",
    "terminal.integrated.profiles.linux": {
        "0nyr-bash": {
            "path": "bash",
            "args": [],
            "icon": "terminal-bash",
            "colorTheme": "One Dark Pro",
        },
        "simple-bash": {
            "path": "bash",
            "args": ["--rcfile", "/home/onyr/custom_bash/vscode/custom_shell.sh"],
            "icon": "terminal-bash",
            "colorTheme": "One Dark Pro",
            "env": {
                "PS1": "\\[033[38;5;10m\\]\\u\\[\\033[38;5;15m\\]@\\[\\033[38;5;10m\\]\\h\\[\\033[38;5;15m\\]:\\[\\033[38;5;6m\\]\\w\\[\\033[38;5;15m\\]\\$ ",
                "TERM": "xterm-kitty",
                "COLORTERM": "truecolor",
                "EDITOR": "nano"
            }
        },
        "no-profile-bash": {
            "path": "bash",
            "args": ["--norc", "--noprofile"],
            "icon": "terminal-bash",
            "colorTheme": "One Dark Pro",
            "env": {
                "PS1": "\\u@\\h:\\w\\$ ",
                "TERM": "xterm-256color",
                "COLORTERM": "truecolor",
                "EDITOR": "vim"
            }
        }
    },
    "rust-analyzer.imports.granularity.group": "module",
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.typeCheckingMode": "basic",
    "ltex.java.path": "/nix/store/2sccfwy5jj3vvn5hilq5d2ahrxn5kss0-openjdk-11.0.19+7/lib/openjdk",
    "window.zoomLevel": 3,
    "git.ignoreRebaseWarning": true,
